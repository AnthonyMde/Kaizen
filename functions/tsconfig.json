{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": [
      "mocha",
      "node",
      "chai"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "tests/**/*.test.ts"
  ]
}